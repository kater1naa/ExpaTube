<div class="wraper custom-class">
  <div id="container-shadow" class="container mt-3 mb-5">
    <div class="row">
      <div class="col-8" >
        <h2><%= @event.title %></h2>
        <div class="event-location-description">
          <%# Display event details such as date, time, location, etc. %>
          <p><strong>Date:</strong> <%= @event.starts_at.strftime("%B %e, %Y") %></p>
          <p><strong>Time:</strong> <%= @event.starts_at.strftime("%l:%M %p") %> - <%= @event.ends_at.strftime("%l:%M %p") %></p>
          <p><strong>Location:</strong> <%= @event.address %></p>
          <p><strong>Limit:</strong> <%= @event.limit %></p>
          <%# Display event description %>
          <p><strong>Description:</strong> <%= @event.description %></p>
          <%# <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> %>
          <h5 data-bs-toggle="modal" data-bs-target="#exampleModal"><strong><%= @creator.first_name%> <%= @creator.last_name %></strong></h5>
           <%= button_to "Join Event", event_attendances_path(@event), class:"btn btn-primary" unless @event.user == current_user %>
           <%= render "modal", user: @creator %>
        </div>
      </div>

      <%# style="float: right; width: 30%; height: 600px;" %>
      <div class="col-4" >
        <div class="map-location" style="height: 100%"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
